@model Blazingshop.DomainModel.Models.Category
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<body style="background-color:aliceblue;" >

            <div asp-validation-summary="All" class="text-danger"></div>
        
            <form action="/Category/Create" method="post" class="px-4">
                <h2 class="fa fa-plus fa-2x text-info">Create</h2>
                <div class="row">

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">

                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="form-group">
                        <br /><br />
                        <button type="submit" value="Add" class="btn btn-sm btn-info rounded-0 text-uppercase col-md-2">Add</button>

                        <div class="col-md-4">
                            <a href="/Category/GetCategories" class="btn btn-sm btn-primary rounded-0 text-uppercase">Back to List</a>
                            <br />
                        </div>

                    </div>
                </div>



            </form>
          
      
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}