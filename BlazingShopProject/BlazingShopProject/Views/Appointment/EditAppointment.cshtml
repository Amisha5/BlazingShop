@model Blazingshop.DomainModel.Models.Appointment

@{
    ViewBag.Title = "EditAppointment";
}

<h2>EditAppointment</h2>

@using (Html.BeginForm("EditAppointment", "Appointment"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal px-4">
