@model Blazingshop.DomainModel.Models.Product
@{
    ViewBag.Title = "GetProductById";
}

<h2>GetProductById</h2>

<body style="background-color:aliceblue;">
    <div class="content px-4">
        <br>
        <h2 class="text-info">Product Details</h2>
        <div class="p-4 border rounded row">
            <div class="col-md-7">
                <div class="form-group row">
                    <div class="col-2">
                        Name
                    </div>
                    <div class="col-md-7">
                        <input value="@Model.ProductName" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Shade Color
                    </div>
                    <div class="col-md-7">
                        <input value="@Model.ShadeColor" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Price
                    </div>
                    <div class="col-md-7">
                        <input value="@Model.Price.ToString("c")" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Category Name
                    </div>
                    <div class="col-md-7">
                        <input value="@Model.Category.CategoryName" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-4">
                    </div>*@
                    <div class="col-md-3">
                        <a href="~/Appointment/GetProduct" class="btn btn-success form-control">Back to List</a>
                    </div>
                    <div class="col-md-4">
                        <a href="~/Appointment/BookAppointment/@Model.PId" class="btn btn-primary form-control">Book Appointment</a>
                        @*<button class="btn btn-primary form-control">
                                Book Appointment
                            </button>*@
                    </div>
                </div>
            </div>
            <div class="offset-1 col-md-5" style="float:left;">
                @if (Model.files != null)
                {
                    string imageBase64 = Convert.ToBase64String(Model.files);
                    string imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                    <img src="@imageSrc" width="400" height="250" />
                }
               
            </div>
            <br>
        </div>

    </div>
</body>