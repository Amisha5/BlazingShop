@model IEnumerable<Blazingshop.DomainModel.Models.Product>
@{
    ViewBag.Title = "GetAllProduct";
}


<body style="background-color:aliceblue;">


    <div class="content px-4">

        <div class="container border p-3"> 
            <div class="row">
                <div class="col-5">
                    <h3 class="text-info fa fa-list-ul fa-2x">Product List</h3>
                </div>
                <div class="col-3">
                    <a href="/Product/Insert" class="btn btn-info" style="margin-top:30px;width:250px;height:40px;padding-top:10px;font-size:20px;">Add New Product</a>
                </div>
            </div>

            <div class="row pt-4">
                <table class="table table-striped" width="80%" style="width:950px;height:150px;margin-top:30px;">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Shade Color</th>
                            <th>Category</th>
                            <th>Image</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Price</td>
                                <td>@item.ShadeColor</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    
                                    @if (item.files != null)
                                    {
                                    string imageBase64 = Convert.ToBase64String(item.files);
                                    string imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                                    <img src="@imageSrc" width="100" height="100" />
                                    }

                                </td>
                                <td>
                                    @Html.ActionLink(" ", "EditProduct", "Product", new { id = @item.PId }, new { @class = "btn btn-success fa fa-edit" })
                                   
                                    
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "DeleteProducts", "Product", new { id = @item.PId }, new { @class = "btn btn-danger fa fa-trash" })

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>

    </div>
</body>